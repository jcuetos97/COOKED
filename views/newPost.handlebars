<div class="post-card">
    <div class="card-header">
        <p>New Post<i class="fa-solid fa-utensils"></i></p> 
    </div>
    <form class="card-body newPost-form" action="/api/post/new" method="POST" enctype="multipart/form-data">   
        <label for="title-newPost">Title.</label>
        <input class="form-input" type="text" id="title-newPost" name="name"/>

        <label for="image-newPost">Image.</label>
        {{!-- <input class="form-input" type="image" id="title-newPost"/> --}}
        <input class="form-input" type="file" name="fileImg">
        
     

        <label for="content-newPost">Content.</label>
        <textarea name="recipe"  class="form-input" placeholder="Write post content here..." id="content-newPost" cols="0" rows="3"></textarea>
    
        <button class="btn sign-up-btn" id="publish" type="submit">Publish</button>
    </form>
 </div>

