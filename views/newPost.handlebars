<div class="post-card">
    <div class="card-header">
        <p>New Post</p> 
    </div>
    <form class="form-body newPost-form" action="/api/post/new" method="POST" enctype="multipart/form-data">   
        <label for="title-newPost">Title.</label>
        <input class="form-input" type="text" id="title-newPost" name="name" required/>

        <label for="image-newPost">Image.</label>
        <input class="form-input" type="file" name="fileImg" required>
       
        <label for="content-newPost">Content.</label>
        <textarea name="recipe"  class="form-input" placeholder="Write post content here..." id="txtInput" cols="0" rows="1" required></textarea>
        
        <label for="category-newPost">Choose a category:</label>
            <div class="categories">
                <div class="category-link">
                    <input type="radio" id="veggie" name="category" value="Veggie" required>
                    <label for="veggie">Veggie</label>
                </div>
                <div class="category-link">
                    <input type="radio" id="allMeats" name="category" value="All-Meats" required>
                    <label for="allMeats">All-Meats</label>
                </div>
                <div class="category-link">
                    <input type="radio" id="dessert" name="category" value="Dessert" required>
                    <label for="dessert">Dessert</label>
                </div>
            </div>
            
        <button class="btn sign-up-btn" id="publish" type="submit">Publish</button>
    </form>
 </div>

