<div class="post-card">
    <div class="card-header">
        <p>New Post</p> 
    </div>
    <form class="card-body newPost-form" action="/api/post/new" method="POST" enctype="multipart/form-data">   
        <label for="title-newPost">Title.</label>
        <input class="form-input" type="text" id="title-newPost" name="name"/>

        <label for="image-newPost">Image.</label>
        <input class="form-input" type="file" name="fileImg">
       
        <label for="content-newPost">Content.</label>
        <textarea name="recipe"  class="form-input" placeholder="Write post content here..." id="txtInput" cols="0" rows="1"></textarea>
        
        <label for="category-newPost">Choose a category:</label>
            <div class="categories">
                <div class="category-link">
                    <input type="radio" id="veggie" name="category" value="Veggie">
                    <label for="veggie">Veggie</label>
                </div>
                <div class="category-link">
                    <input type="radio" id="allMeats" name="category" value="All-Meats">
                    <label for="allMeats">All-Meats</label>
                </div>
                <div class="category-link">
                    <input type="radio" id="dessert" name="category" value="Dessert">
                    <label for="dessert">Dessert</label>
                </div>
                
