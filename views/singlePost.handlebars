<div class="posts-container">
  <div class="post-card">
    <div class="card-header">
      <div class="card-category">
          <p class="card-category-text">{{post.category}}</p>
      </div>
      <h2>{{post.title}}</h2>
      <div class="card-data">
        Posted by {{post.user.username}} on {{postDate post.createdAt}}
      </div>
    </div>
    <div class="card-body">
      <img src="/images/userUploads/{{post.file_img}}" alt="post-image" class="card-image"> 
      <div class="recipe-body" style="display:none;">
        {{post.body}}
      </div>
      <div class="card-icons">
        <div class="card-icons-wrapper"> 
          <a><i id="heart-icon" class="fa-regular fa-heart fa-xl" data-count="0"></i></a> 
          <p class="count">1</p>
        </div>
        <div class="card-icons-wrapper">
          <a href="/post/{{id}}"><i id="comment-icon" class="fa-regular fa-comment fa-xl" data-count="0"></i></a>
          <p class="count">1</p>
        </div>
      </div>
    </div>
  </div>

  {{#if post.comments}}
    <section class="post-card">

      <div class="card-header-comment">
        <p>Comments</p>
      </div>

      <div >
        {{#each post.comments}}
          <div class="form-body">
            <p>
              {{body}}
            </p>
            <p class="card-data">
              &mdash; {{user.username}}, {{postDate createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="post-card">
  
    <div class="form-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />
      <label class="form-label" for="comment-body">Add new comment</label>
      <textarea name="comment-body" class="form-input"></textarea>
      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>
<script src="/js/showRecipe.js"></script>