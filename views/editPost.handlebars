<div class="posts-container">
    <div class="post-card">
    <div class="card-header">
        <p>Edit Post</p>
    </div>
    <form id="edit-post-form" class="form-body">
        <input type="hidden" id="post-id" value="{{post.id}}" />

        <label class="form-label" for="post-title">Title</label>
        <input type="text" id="post-title" value="{{post.title}}" class="form-input" />

        <label class="form-label" for="image-editPost">Image.</label>
        <input class="form-input" type="file" name="fileImg">

        <label class="form-label" for="post-body">Content</label>
        <textarea id="post-body" class="form-input">{{post.body}}</textarea>

        <button type="submit" id="update-btn" class="btn">Update</button>
    </form>
    </div>
</div>

<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>