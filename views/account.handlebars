<div class="card">
    <div class="card-header-pic"
        style="background-image: url(https://www.animalgourmet.com/wp-content/uploads/2015/08/angrygordon.jpg)">
        <div class="card-header-bar">
            <a href="#" class="btn-message"><span class="sr-only">Message</span></a>

        </div>

        <div class="card-header-position">

            <a href="#" class="btn-pic"><span class="sr-only">Add Profile pic</span></a>
            <input class="Profile-input" type="profile" name="profileImg" required="">

        </div>
    </div>

    <div class="card-body">
        <h2 class="name">User : {{post.user}}</h2>
        <h4 class="job-title">Hogwarts teacher</h4>
        <textarea name="Bio" class="Bio-input" placeholder="Write bio here..." id="txtInput" cols="0" rows="1"
            required></textarea>

        <div class="social-accounts">
            <a href="#" class="fa-brands fa-pinterest"></a>
            <a href="#" class="fa-brands fa-twitter"></a>
            <a href="#" class="fa-brands fa-facebook"></a>
        </div>
    </div>

    <div class="card-footer">
        <div class="stats">
            <div class="stat">
                <span class="label">Posts</span>
                <span class="value">200</span>
            </div>
            <div class="stat">
                <span class="label">Followers</span>
                <span class="value">940</span>
            </div>
            <div class="stat">
                <span class="label">Likes</span>
                <span class="value">320</span>
            </div>
        </div>
    </div>
</div>
<script src="https://kit.fontawesome.com/e601f25512.js" crossorigin="anonymous"></script>
<script src="/js/account.js"></script>
<script src="/js/showRecipe.js"></script>
<script src="/js/comment.js"></script>